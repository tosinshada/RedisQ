<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="MessagePack" Version="3.1.4" />
      <PackageReference Include="StackExchange.Redis" Version="2.8.41" />
      <PackageReference Include="Microsoft.Build.Framework" Version="17.0.0" />
      <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\RedisQ.SourceGenerators\RedisQ.SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="commands/**/*.lua" />
        <AdditionalFiles Include="commands/*.lua" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="commands\**\*.lua" />
    </ItemGroup>

    <!-- Define the custom task -->
    <UsingTask TaskName="RedisQ.Core.BuildTasks.ExpandLuaScriptsTask" AssemblyFile="$(OutputPath)\RedisQ.Core.dll" />

    <!-- Target to expand Lua scripts -->
    <Target Name="ExpandLuaScripts" AfterTargets="Build">
        <PropertyGroup>
            <ScriptsDirectory>$(MSBuildProjectDirectory)\commands</ScriptsDirectory>
            <ExpandedScriptsDirectory>$(OutputPath)scripts</ExpandedScriptsDirectory>
        </PropertyGroup>
        
        <ExpandLuaScriptsTask 
            ScriptsDirectory="$(ScriptsDirectory)" 
            OutputDirectory="$(ExpandedScriptsDirectory)" />
    </Target>

</Project>
